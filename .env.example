DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=yourpassword
DB_NAME=the2win
# Alternatively, provide a full MySQL connection string (takes precedence over fields above)
# Example: mysql://user:pass@host:3306/the2win?ssl=true
# DATABASE_URL=
PORT=4000
JWT_SECRET=change_me_secure
STRIPE_KEY=sk_test_your_key
OTP_EXP_MIN=10

# One-time compatibility: if some old DB rows stored plaintext passwords in `users.password`,
# set this to true to auto-upgrade them to bcrypt on next successful login, then set it back to false.
# ALLOW_LEGACY_PLAINTEXT_PASSWORDS=false

# CORS: comma-separated list of allowed frontend origins
# Example for Vercel and local dev:
# CORS_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app
# If not set, defaults allow localhost and https://*.vercel.app
# CORS_ORIGINS=
# For Cloud Run/backend on a different domain from the frontend, include the exact frontend origin.
# Example:
# CORS_ORIGINS=https://your-frontend.vercel.app

# Optional cookie domain for auth cookie (leave empty unless you need to force a specific domain)
# COOKIE_DOMAIN=

# Admin bootstrap
ADMIN_EMAIL=admin@the2win.local
ADMIN_PASSWORD=ChangeThisAdminPass123!
# If true, existing admin with ADMIN_EMAIL will have role set to admin and password reset to ADMIN_PASSWORD
ADMIN_FORCE_RESET=false
